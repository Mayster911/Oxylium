<UserControl x:Class="DemoBefore.ModeOne"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DemoBefore"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=local:ModeOneViewModel}"
             Padding="5">
    <StackPanel>
        <Label Content="Write the password '1024' to unlock these settings" Margin="5"/>
        <CheckBox Content="A" Margin="5" IsChecked="{Binding IsAChecked}"/>
        <CheckBox Content="B" Margin="5" IsChecked="{Binding IsBChecked}"/>
        <CheckBox Content="C" Margin="5" IsChecked="{Binding IsCChecked}"/>
    </StackPanel>
</UserControl>
